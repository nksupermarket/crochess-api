{
  "compilerOptions": {
    "typeRoots": ["@types", "./node_modules/@types"],
    "moduleResolution": "node",
    "baseUrl": "./",
    "outDir": "dist",
    "allowJs": true,
    "module": "es6",
    "target": "es6",
    "downlevelIteration": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "declaration": true,
    "lib": ["dom.iterable"]
  },
  "include": ["./src/**/*"],
  "exclude": ["test/**/*"],
  "types": ["@types/jest"]
}
